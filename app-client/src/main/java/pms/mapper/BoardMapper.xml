<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="BoardMapper">
  
  <resultMap type="Board" id="BoardMap">
    <id column="board_no" property="no"/> 
    <result column="title" property="title"/>
    <result column="content" property="content"/>
    <result column="created_dt" property="registeredDate"/>
    <result column="view_cnt" property="viewCount"/>
    <result column="type" property="whichBoard"/>
    
    <association property="writer" javaType="member">
      <id column="member_no" property="no"/>
      <result column="id" property="id"/>
      <result column="name" property="name"/>
      <result column="email" property="email"/>
    </association>
    
    <association property="comment" javaType="comment">
      <id column="comment_no" property="no"/>
      <result column="content" property="content"/>
    </association>
     
  </resultMap>
  
  
   <select id="findAll" resultMap="BoardMap">
    select
       b.board_no,
       b.title,
       b.content,
       b.created_dt,
       b.view_cnt,
       b.type,
       m.member_no,
       m.id,
       m.name,
       m.email
    from
      apus_board b
      inner join apus_member m on b.member_no=m.member_no
    order by
      b.board_no desc
  </select>
  
  <select id="findComment" parameterType="int">
    select
	    c.coment_no,
	    c.content
	    m.member_no,
	    m.id
    from apus_comment c
      inner join apus_member_m on c.member_no=m.member_no
    where
      board_no=#{no}
  </select>
  
	<insert id="insert" parameterType="board"
	useGeneratedKeys="true" keyColumn="board_no" keyProperty="no">
	 insert into pms_board(title,content,member_no,whichBoard_no) 
	 values(#{title},#{content},#{writer.no},#{whichBoard})
	</insert>
	
	<insert id="insert2" parameterType="board">
   insert into pms_freeboard(title,content,member_no,whichBoard_no) 
   values(#{title},#{content},#{writer.no},#{whichBoard})
  </insert>
  
  <insert id="insert3" parameterType="board">
   insert into pms_doctorboard(title,content,member_no,whichBoard_no) 
   values(#{title},#{content},#{writer.no},#{whichBoard})
  </insert>
  
  <insert id="insert4" parameterType="board">
   insert into pms_noticeboard(title,content,member_no,whichBoard_no) 
   values(#{title},#{content},#{writer.no},#{whichBoard})
  </insert>
	
	
