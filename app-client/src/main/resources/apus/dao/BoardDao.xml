  <!-- freeboard -->
	<insert id="insert" parameterType="board"
	useGeneratedKeys="true" keyColumn="board_no" keyProperty="no">
	 insert into apus_board(title,content,type,member_no) 
	 values(#{title},#{content},'freeBoard',#{writer.no})
	</insert>
	
	<!-- doctorboard -->
	<insert id="insert2" parameterType="board" 
	useGeneratedKeys="true" keyColumn="board_no" keyProperty="no">
  insert into apus_board(title,content,type,member_no) 
   values(#{title},#{content},'doctorBoard',#{writer.no})
  </insert>
  
  <!-- noticeboard -->
  <insert id="insert3" parameterType="board" 
  useGeneratedKeys="true" keyColumn="board_no" keyProperty="no">
  insert into apus_board(title,content,type,member_no) 
   values(#{title},#{content},'noticeBoard',#{writer.no})
  </insert>
  
	 <update id="updateCount" parameterType="int">
    update apus_board set
      view_cnt = view_cnt + 1
    where board_no=#{no}
   </update>
	
	
	<update id="update" parameterType="board">
	  update apus_board set
     title=#{title},
     content=#{content},
    where board_no=#{no}
	</update>
	
